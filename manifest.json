{
  "manifest_version": 3,
  "name": "Nexus Accessibility Testing Toolkit",
  "version": "1.1.0",
  "description": "Nexus Accessibility Testing Toolkit: A Chrome extension for accessibility inspection and testing.",
  "permissions": [
    "activeTab",
    "scripting",
    "debugger",
    "storage",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
        "src/utils/dom-sanitizer.js",
        "src/utils/error-handler.js",
        "src/utils/debounce.js",
        "src/utils/logger-content.js",
        "src/utils/formatter.js",
        "src/components/tooltip/tooltip.js",
        "src/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/components/tooltip/tooltip.css",
        "src/assets/fonts/inter.css",
        "src/assets/fonts/inter-latin-400.woff2",
        "src/assets/fonts/inter-latin-ext-400.woff2",
        "src/assets/fonts/jetbrains-mono-local.css",
        "src/assets/fonts/jetbrains-mono-latin-400.woff2",
        "src/assets/fonts/jetbrains-mono-latin-ext-400.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "icons": {
    "128": "src/assets/nexus-icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Open the Access Nexus popup"
    }
  }
}
